{
    "manifest_version": 4,
    "name": "AI Slop Filter",
    "version": "0.4.0",
    "description": "Hides LinkedIn AI slop to promote original content. Click the icon to toggle.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
