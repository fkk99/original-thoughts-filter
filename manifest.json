{
    "manifest_version": 3,
    "name": "The Original Thoughts Filter",
    "version": "0.2.0",
    "description": "Hides LinkedIn AI slop to promote original thoughts. Click the icon to toggle.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": [ "content.js" ],
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}